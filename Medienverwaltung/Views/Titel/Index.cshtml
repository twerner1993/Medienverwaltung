@model IEnumerable<Medienverwaltung.Models.Titel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitelInterpret.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitelTyp.TypName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Erscheinung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschreibung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TitelInterpret.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitelTyp.TypName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Erscheinung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschreibung)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TitelId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TitelId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TitelId })
        </td>
    </tr>
}

</table>
