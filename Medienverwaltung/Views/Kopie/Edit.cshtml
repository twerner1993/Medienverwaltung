@model Medienverwaltung.Models.Kopie

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kopie</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.KopieId)

        <div class="form-group">
            @Html.LabelFor(model => model.TitelId, "TitelId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TitelId", String.Empty)
                @Html.ValidationMessageFor(model => model.TitelId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BenutzerId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BenutzerId)
                @Html.ValidationMessageFor(model => model.BenutzerId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Typ, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Typ)
                @Html.ValidationMessageFor(model => model.Typ)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
